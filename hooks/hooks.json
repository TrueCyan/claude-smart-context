{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/init.sh\" 2>/dev/null || powershell -ExecutionPolicy Bypass -File \"${CLAUDE_PLUGIN_ROOT}/scripts/init.ps1\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/.venv/bin/python\" \"${CLAUDE_PLUGIN_ROOT}/scripts/context_manager.py\" 2>/dev/null || \"${CLAUDE_PLUGIN_ROOT}/.venv/Scripts/python.exe\" \"${CLAUDE_PLUGIN_ROOT}/scripts/context_manager.py\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/.venv/bin/python\" \"${CLAUDE_PLUGIN_ROOT}/scripts/fast_compact.py\" 2>/dev/null || \"${CLAUDE_PLUGIN_ROOT}/.venv/Scripts/python.exe\" \"${CLAUDE_PLUGIN_ROOT}/scripts/fast_compact.py\""
          }
        ]
      }
    ]
  }
}
